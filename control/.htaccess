# IO Group Control System - PHP Version
# Apache configuration for URL routing

# Enable rewrite engine
RewriteEngine On

# Set base directory
RewriteBase /control/

# Handle CORS preflight requests
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
</IfModule>

# Handle OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# API routes - route to specific PHP files
RewriteRule ^api/auth(.*)$ api/auth.php [QSA,L]
RewriteRule ^api/clientes(.*)$ api/clientes.php [QSA,L]
RewriteRule ^api/empresas(.*)$ api/empresas.php [QSA,L]
RewriteRule ^api/sedes(.*)$ api/sedes.php [QSA,L]
RewriteRule ^api/contratos(.*)$ api/contratos.php [QSA,L]
RewriteRule ^api/contratos-laborales(.*)$ api/contratos-laborales.php [QSA,L]
RewriteRule ^api/empleados(.*)$ api/empleados.php [QSA,L]
RewriteRule ^api/vehiculos(.*)$ api/vehiculos.php [QSA,L]
RewriteRule ^api/plantas(.*)$ api/plantas.php [QSA,L]
RewriteRule ^api/rutas(.*)$ api/rutas.php [QSA,L]
RewriteRule ^api/servicios(.*)$ api/servicios.php [QSA,L]
RewriteRule ^api/manifiestos(.*)$ api/manifiestos.php [QSA,L]
RewriteRule ^api/guias(.*)$ api/guias.php [QSA,L]
RewriteRule ^api/facturas(.*)$ api/facturas.php [QSA,L]
RewriteRule ^api/reportes(.*)$ api/reportes.php [QSA,L]
RewriteRule ^api/alertas(.*)$ api/alertas.php [QSA,L]

# Static files in public folder
RewriteRule ^pages/(.*)$ public/pages/$1 [L]
RewriteRule ^css/(.*)$ public/css/$1 [L]
RewriteRule ^js/(.*)$ public/js/$1 [L]

# If file or directory exists, serve it directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Default: redirect to public/index.html for SPA routing
RewriteRule ^$ public/index.html [L]

# PHP settings
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Prevent access to sensitive files
<FilesMatch "\.(env|md|json|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>
